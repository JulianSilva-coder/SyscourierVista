<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/devolucionesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="277dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="67dp"
        android:gravity="center"
        android:text="Motivo de devolución"
        android:textSize="20dp"
        android:fontFamily="sans-serif-black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/red"
        android:text="Devolución"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:fontFamily="sans-serif-black"/>

    <EditText
        android:id="@+id/edit_text_area1"
        android:layout_width="wrap_content"
        android:layout_height="172dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="14dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:fontFamily="sans-serif-black"/>


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_area1"
        android:layout_marginTop="16dp"
        android:entries="@array/opciones_array"
        android:fontFamily="sans-serif-black"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Boton_devolucion"
        android:layout_width="410dp"
        android:layout_height="106dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        android:background="@color/red"
        android:fontFamily="sans-serif-black"
        android:text="Devolucion"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

</RelativeLayout>